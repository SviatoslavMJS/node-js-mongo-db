<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <p class="user-message user-message--error"><%= errorMessage %></p>
         <% } %>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                type="text" 
                name="title" 
                id="title" 
                value="<% if (editing || hasError) { %><%= product.title %><% } %>"
                class="<%= validationErrors.find(e => e.path === 'title')? 'error': '' %>"
                />
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                type="text" 
                name="imageUrl" 
                id="imageUrl"
                value="<% if (editing || hasError) { %><%= product.imageUrl %><% } %>"
                class="<%= validationErrors.find(e => e.path === 'imageUrl')? 'error': '' %>"
                />
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                type="number" 
                name="price" 
                id="price" 
                step="0.01" 
                class="<%= validationErrors.find(e => e.path === 'price')? 'error': '' %>"
                value="<% if (editing || hasError) { %><%= product.price %><% } %>"
                />
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                name="description" 
                id="description" 
                rows="5"
                class="<%= validationErrors.find(e => e.path === 'description')? 'error': '' %>"
                ><% if (editing || hasError) { %><%= product.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>